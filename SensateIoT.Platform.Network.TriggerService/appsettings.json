{
  "Logging": {
    "LogLevel": {
      "System": "Warning",
      "Grpc": "Warning",
      "Microsoft": "Warning"
    }
  },
  "Database": {
    "MongoDB": {
      "DatabaseName": "SensateIoT",
      "MaxConnections": 300
    }
  },
  "Mqtt": {
    "InternalBroker": {
      "BulkMeasurementTopic": "$share/triggers/sensateiot/triggers/internal/measurements/bulk",
      "BulkMessageTopic": "$share/triggers/sensateiot/triggers/internal/messages/bulk",
      "ActuatorTopicFormat": "sensateiot/actuators/$id",
      "CommandTopic": "sensateiot/internal/commands",
      "TriggerEventTopic": "sensateiot/triggers/internal/events/bulk"
    }
  },
  "Timeouts": {
    "SmsTimeout": 5,
    "HttpTimeout": 0,
    "ActuatorTimeout": 0,
    "MailTimeout": 2
  },
  "Mail": {
    "Provider": "SMTP",
    "FromName": "Sensate IoT",
    "From": "noreply@sensateiot.com"
  },
  "Text": {
    "Provider": "Twillio",
    "AlphaCode": "Sensate IoT"
  },
  "Caching": {
    "DataReloadIntervalSeconds": 300 
  } 
}

