{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Warning",
      "Grpc": "Warning",
      "Microsoft": "Information",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "None",
      "Microsoft.AspNetCore.Routing.EndpointMiddleware": "None",
      "Microsoft.EntityFrameworkCore.Database.Command": "None"
    }
  },
  "Database": {
    "SensateIoT": {
      "ConnectionString": "User ID = postgres;Password=DefaultPassword;Server=localhost;Port=5432;Database=Sensate"
    },
    "MongoDB": {
      "DatabaseName": "Sensate",
      "ConnectionString": "mongodb://root:root@localhost:27017/Sensate?authSource=admin",
      "MaxConnections": 300
    }
  },
  "Mqtt": {
    "InternalBroker": {
      "Username": "sensate",
      "Password": "sensateiot",
      "Ssl": "false",
      "Port": 1883,
      "Host": "127.0.0.1",
      "InternalCommandsTopic": "sensate-auth/internal/commands",
      "InternalBulkMeasurementTopic": "sensateiot/internal/measurements/bulk",
      "InternalBulkMessageTopic": "sensateiot/internal/messages/bulk"
    },
    "PublicBroker": {
      "Username": "sensate",
      "Password": "sensateiot",
      "Ssl": "false",
      "Port": 1883,
      "Host": "127.0.0.1",
      "ActuatorTopic": "sensateiot/actuator/$sensorId"
    } 
  },
  "Cache": {
    "DataReloadInterval": 5,
    "Timeout": 6,
    "Capacity": 30000 
  },
  "QueueTopics": {
    "TriggerTopic": "sensateiot/internal/$type/bulk",
    "LiveDataTopic": "sensateiot/internal/$type/$target/bulk" 
  } 
}
