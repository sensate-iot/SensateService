{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Warning",
      "Grpc": "Warning",
      "Microsoft": "Information",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "None",
      "Microsoft.AspNetCore.Routing.EndpointMiddleware": "None",
      "Microsoft.EntityFrameworkCore.Database.Command": "None"
    }
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },
  "Database": {
    "SensateIoT": {
      "ConnectionString": "User ID = postgres;Password=DefaultPassword;Server=localhost;Port=5432;Database=Sensate"
    },
    "MongoDB": {
      "DatabaseName": "Sensate",
      "ConnectionString": "mongodb://root:root@localhost:27017/Sensate?authSource=admin",
      "MaxConnections": 300
    }
  },
  "Mqtt": {
    "InternalBroker": {
      "Username": "sensate",
      "Password": "sensateiot",
      "Ssl": "false",
      "Port": 1883,
      "Host": "127.0.0.1",
      "CommandTopic": "sensateiot/internal/commands"
    },
    "PublicBroker": {
      "Username": "sensate",
      "Password": "sensateiot",
      "Ssl": "false",
      "Port": 1883,
      "Host": "127.0.0.1",
      "ActuatorTopic": "sensateiot/actuator/$sensorId"
    }
  },
  "Cache": {
    "DataReloadInterval": 300,
    "LiveDataReloadInterval": 90,
    "Timeout": 360,
    "Capacity": 30000
  },
  "Routing": {
    "TriggerTopic": "sensateiot/triggers/internal/$type/bulk",
    "LiveDataTopic": "sensateiot/live/internal/$type/$target/bulk",
    "ActuatorTopicFormat": "sensateiot/actuators/$id", 
    "InternalPublishInterval": 350,
    "PublicPublishInterval": 350 
  }
}
