      "BulkMessageTopic": "sensateiot/triggers/internal/messages/bulk",
      "ActuatorTopicFormat": "sensateiot/actuators/$id"
    }
  },
  "Timeouts": {
    "SmsTimeout": 5,
    "HttpTimeout": 0,
    "ActuatorTimeout": 0,
    "MailTimeout": 2
