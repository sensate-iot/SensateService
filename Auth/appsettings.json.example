{
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },

  "InstanceName": "kerby",

  "Cache" : {
    "Enabled": true,
    "Type": "Distributed"
  },

  "Database": {
    "MongoDB": {
      "DatabaseName": "Sensate",
      "ConnectionString": "mongodb://sensate:mongopass@192.168.127.128:27017/Sensate"
    },
    "PgSQL": {
      "ConnectionString": "User ID = postgres;Password=DefaultPassword;Server=192.168.127.128;Port=5432;Database=Sensate"
    },
    "Redis": {
      "Host": "192.168.127.128",
      "InstanceName": "Sensate"
    }
  },

  "PublicUrl": "http://localhost:5000", 

  "Authentication" : {
    "ResetForward": "https://localhost:5000/login",
    "ConfirmForward": "https://localhost:5000/login",
    "JwtRefreshExpireMinutes": 43200,
    "JwtKey": "<key>",
    "JwtIssuer": "http://localhost:5000/",
    "JwtExpireMinutes": 43200
  },

  "Mqtt" : {
    "Username": "sensate",
    "Password": "MqttPassword",
    "Ssl": "false",
    "Port": 1883,
    "Host": "host.mqtt.net",
    "ShareTopic": "$share/sensate/sensate/measurements"
  },

  "Mail": {
    "Provider": "SendGrid",
    "SendGrid": {
      "Username": "bietje",
      "Key": "<sendgrid-key>"
    },
    "Smtp": {
      "Ssl": true,
      "Port": 587,
      "Host": "mail.bietje.net",
      "Username": "root@mail.com",
      "Password": "SomePassword"
    }
  },

  "Text" : {
    "Provider": "Twilio",
	"AlphaCode": "Sensate IoT",
    "Twilio": {
      "AccountSid": "<sid>",
      "AuthToken": "<auth token>"
    } 
  } 
}